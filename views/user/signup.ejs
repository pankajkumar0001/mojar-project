<%layout("/layout/bollerpiate")%>

<div class="row mt-3 ">
    <h1 class=" col-6 offset-3 mb-5">Signup on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form method="post" action="/signup" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-lable">Username</label>
                <input type="text" name="username" id="username"  class="form-control" required/>
                <div class="valid-feedback">Look good!</div>
              </div>
              <div class="mb-3">
                <label for="email" class="form-lable">Email</label>
                <input type="text" name="email" id="email"  class="form-control" required/>
              </div>
              <div class="mb-3">
                <label for="password" class="form-lable">Password</label>
                <input type="password" name="password" id="password"  class="form-control" required/>
              </div>
              <button class="btn btn-danger mb-5">Signup</button>
            </form>

    </div>
</div>
